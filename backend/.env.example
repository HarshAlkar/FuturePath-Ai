# Gold Dashboard API Configuration

# Server Configuration
PORT=5001
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gold-dashboard

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Gold API Keys (Get from respective providers)
# Metals API - https://metals-api.com/
METALS_API_KEY=your-metals-api-key-here

# Gold API - https://www.goldapi.io/
GOLD_API_KEY=your-gold-api-key-here

# Metal Price API - https://metalpriceapi.com/
METAL_PRICE_API_KEY=your-metal-price-api-key-here

# OpenAI API Key (for AI predictions)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (for alerts)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Webhook URLs (for external integrations)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# External Services
NOTIFICATION_SERVICE_URL=
ANALYTICS_API_KEY=
